<div class="posts-list">
{%- for post in posts -%}
  <article class="posts-list__item">
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <footer class="byline">
      <p>posted on {{ post.date | date: "%d %b, %Y" }} by {{ post.data.author }}</p>
    </footer>
    <p>{{ post.templateContent | strip_html | truncatewords: 25 }}</p>
  </article>
{%- endfor -%}
</div>
